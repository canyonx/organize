{{ form_start(form) }}
<div class="row">
	<div class="col-md-4">
		<h2 class="h5">Informations personnelles</h2>
		<p class="text-muted">Ces informations sont visibles par les autres utilisateurs</p>
	</div>
	<div class="row col-md-8">
		<div class="col-md-6">
			{{ form_row(form.birthAt) }}
		</div>
		<div class="col-md-6">
			<div class="mb-3">
				<label for="city_profile" class="form-label">Ville</label>
				<div id="city_profile" data-controller="city-profile"></div>
			</div>
			{{ form_row(form.city, {value: app.user.city}) }}
			{{ form_row(form.lat) }}
			{{ form_row(form.lng) }}
		</div>
		{{ form_row(form.imageFile) }}
		{{ form_row(form.about) }}
		{{ form_row(form.activities) }}
	</div>
</div>
<div class="row mt-3">
	<div class="col-md-4">
		<h2 class="h5">Réseaux sociaux</h2>
		<p class="text-muted">Liens vers vos réseaux sociaux</p>
	</div>
	<div class="row col-md-8">
		<div class="col-md-6">
			{{ form_row(form.facebook) }}
		</div>
		<div class="col-md-6">
			{{ form_row(form.instagram) }}
		</div>
	</div>
	<div class="p-3">
		<button class="btn btn-primary rounded-pill w-100">{{ button_label|default('Save') }}</button>
	</div>
	{{ form_end(form) }}
