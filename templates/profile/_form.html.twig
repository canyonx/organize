{{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">
            <h2 class="h5">Informations personnelles</h2>
            <p class="text-muted">Ces informations sont visibles par les autres utilisateurs</p>
        </div>
        <div class="col-md-8 row">
            <div class="col-md-6">
                {{ form_row(form.pseudo) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.birthAt) }}
            </div>
            <div class="mb-3">
                <label for="searchAddress" class="form-label">Ville</label>
                <div id="searchAddress" data-controller="searchAddress"></div>
            </div>
            <div class="row" style="display:none">
                <div class="col-4">{{ form_row(form.city) }}</div>
                <div class="col-4">{{ form_row(form.lat) }}</div>
                <div class="col-4">{{ form_row(form.lng) }}</div>
            </div>
            {{ form_row(form.avatar) }}
            {{ form_row(form.about) }}
            {{ form_row(form.activities) }}
        </div>
    </div>
    <div class="p-3">
        <button class="btn btn-primary rounded-pill w-100">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}
