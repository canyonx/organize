<section class="col-md-10 mx-auto p-3 border border-3 rounded-5 bg-white m-4">
    <h2>Suivis ({{ user.myFriends|length }})</h2>
    
    <div class="row d-flex flex-row p-3">
        {% for friend in user.myFriends %}
            <div class="col-4">
                {{ component('UserCard', { user: friend }) }}
            </div>
        {% else %}
            Aucun utilisateur suivi !
        {% endfor %}
    </div>
</section>