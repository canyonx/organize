{% extends 'base.html.twig' %}

{% block title %}{{ user }}
{% endblock %}

{% block body %}
	<section class="col-10 mx-auto p-3 border border-3 rounded-5 bg-white m-4">
		<div class="row">
			<div class="col-md-6 text-center">
				<img src="https://placehold.co/300" alt="" class="rounded-circle border border-3 p-2">
			</div>
			<div class="col-md-6">
				<h1>{{ user }}</h1>public
				<table class="table">
					<tbody>
						<tr>
							<th>Pseudo</th>
							<td>{{ user.id }} - {{ user }}</td>
						</tr>
						<tr>
							<th>Email</th>
							<td>{{ user.email }}</td>
						</tr>
						<tr>
							<th>Activit√©s</th>
							<td>
                                {% if user.activities|length > 0 %}
                                <ul>
                                    {% for activity in user.activities %}
                                        <li>{{ activity }}</li>
                                    {% endfor %}
                                </ul>
                                {% endif %}
                            </td>
						</tr>
						<tr>
							<th>Roles</th>
							<td>
								{% for role in user.roles %}
									{{ role }} <br>
								{% endfor %}
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</section>
{% endblock %}
