        <div class="card-header">
            <h1>Editer mon profil</h1>
            
            <div class="d-flex justify-content-between">
                <a href="{{ path('app_profile_index') }}" class="btn btn-primary rounded-pill">Retour</a>
                {{ include('profile/_delete_form.html.twig') }}
            </div>
        </div>
        <div class="card-body">
            {{ include('profile/_form.html.twig', {'button_label': 'Enregistrer'}) }}
        </div>
	</section>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/@webgeodatavore/photon-geocoder-autocomplete@2.0.1/dist/photon-geocoder-autocomplete.min.css" type="text/css">
