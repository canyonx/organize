{% set colors = ['danger', 'info', 'success'] %}
<div id="features" data-controller="reveal">
	{% for key, feature in features %}
		<section class="feature py-4 col-8 mx-auto {{ key != 0 ? 'reveal'}}">
			<div class="row align-items-center">
				<div class="col-md-6 py-2 px-5 {{ key == 0 ? 'mt-5'}}  {{ ((key + 1) / 2) matches '/^\\d+$/' ? 'order-md-2' }}">
					<h1 class="text-{{ colors[key] }}">{{ feature.title }}</h1>
					<p>{{ feature.subtitle|raw }}</p>
				</div>
				<div class="col-md-6 {{ ((key + 1) / 2) matches '/^\\d+$/' ? 'order-md-1' }}">
					{% if feature.picture %}
						<img src="{{ asset('images/' ~ feature.picture) }}" alt="{{ feature.title }}" class="img-fluid rounded-4" width="500" height="500">
					{% else %}
						<img src="https://placehold.co/300" alt="" class="rounded-4">
					{% endif %}
				</div>
			</div>
		</section>
	{% endfor %}
</div>
