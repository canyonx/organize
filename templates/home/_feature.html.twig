<div class="bg-light py-5">
	{% for key, feature in features %}
		<section class="py-4 col-8 mx-auto">
			<div class="row">
				<div class="col-md-6 align-self-center {% if ((key + 1) / 2) matches '/^\\d+$/' %} order-md-2{% endif %}">
					<h1>{{ feature.title }}</h1>
					<p>{{ feature.subtitle }}</p>
				</div>
				<div class="col-md-6 text-center {% if ((key + 1) / 2) matches '/^\\d+$/' %} order-md-1{% endif %}">
					{% if feature.picture %}
						<img src="{{ asset('images/' ~ feature.picture) }}" alt="{{ feature.title }}" class="img-fluid rounded-4" width="400" height="400">
					{% else %}
						<img src="https://placehold.co/300" alt="" class="rounded-4">
					{% endif %}
				</div>
			</div>
		</section>
	{% endfor %}
</div>
