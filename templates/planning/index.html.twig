{% extends 'base.html.twig' %}

{% block title %}Planning
{% endblock %}

{% block body %}
	<section class="card">
		<div class="card-header">
			<div class="d-flex justify-content-between align-items-center">
				<h1 class="card-title">Mes Sorties</h1>
				<a href="{{ path('app_trip_new') }}" class="btn btn-success rounded-pill">
					Nouvelle sortie
				</a>
			</div>
			<div class="my-2">
				<a href="{{ path('app_planning_index')}}" class="btn btn-primary rounded-pill">
					Toutes
				</a>
				<a href="{{ path('app_planning_index', {'f': 'created'})}}" class="btn btn-primary rounded-pill">
					Crées
				</a>
				<a href="{{ path('app_planning_index', {'f': 'requests'})}}" class="btn btn-primary rounded-pill">
					Demandées
				</a>
			</div>
		</div>
		<div
			class="card-body">
			{# {% include "table/_table.html.twig" %} #}
			{% include "table/_plan.html.twig" %}
		</div>
		<div class="text-end m-3">
			<button class="btn btn-sm btn-light rounded-pill" disabled="disabled">Demandes</button>
			<button class="btn btn-sm btn-info rounded-pill" disabled="disabled">Attente</button>
			<button class="btn btn-sm btn-success rounded-pill" disabled="disabled">Acceptée</button>
			<button class="btn btn-sm btn-secondary rounded-pill" disabled="disabled">Refusée</button>
		</div>
	</div>
</section>{% endblock %}
