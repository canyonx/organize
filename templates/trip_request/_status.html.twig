{% if app.user == tripRequest.trip.member %}
    {# For Trip owner, show trip Request status/actions #}
    <div class="mb-2">
        <h2 class="">Demande de 
            <a href="{{ path('app_profile_show', {slug: tripRequest.member.slug}) }}"
            {# class="btn btn-primary rounded-pill" #}
            data-turbo-frame="_top">
                {{ tripRequest.member|title }}
            </a>
        </h2>
    </div>
    <span id="tripRequest_id" class="visually-hidden" value="{{ tripRequest.id }}">{{ tripRequest.id }}</span>
    <div class="d-flex justify-content-between align-items-center">
        <div class="">
            <button class="btn btn-{{ tripRequest.color}}" disabled>
                {{ tripRequest.status|title|trans }}
            </button>
        </div>

        <div class="" data-turbo-frame="accepted_user">
            {% if tripRequest.status == 'PENDING' or tripRequest.status == 'REFUSED'  %}
                <a href="{{ path('app_trip_request_status', {id: tripRequest.id , status: 'ACCEPTED'}) }}" 
                class="btn btn-success rounded-pill">
                {# Turbo stream update participant list #}
                <turbo-stream action="update" target="accepted_user">
                    <template>
                        {% include 'trip/_accepted_user.html.twig' %}
                    </template>
                </turbo-stream>
                    Accepter
                </a>

                {# <button 
                class="btn btn-success rounded-pill"
                data-action="click->trip-status#change"
                data-trip-status-id-param="{{ tripRequest.id }}"
                data-trip-status-status-param="ACCEPTED">
                    Accepter
                </button> #}
            {% endif %}
            {% if tripRequest.status == 'PENDING' or tripRequest.status == 'ACCEPTED' %}
                <a href="{{ path('app_trip_request_status', {id: tripRequest.id , status: 'REFUSED'}) }}" 
                class="btn btn-secondary rounded-pill">
                {# Turbo stream update participant list #}
                <turbo-stream action="update" target="accepted_user">
                    <template>
                        {% include 'trip/_accepted_user.html.twig' %}
                    </template>
                </turbo-stream>
                    Refuser
                </a>

                {# <button 
                class="btn btn-secondary rounded-pill"
                data-action="click->trip-status#change"
                data-trip-status-id-param="{{ tripRequest.id }}"
                data-trip-status-status-param="REFUSED">
                    Refuser
                </button> #}
            {% endif %}
        </div>
    </div>
    <div class="mt-3">
        <a href="{{ path('app_trip_show', {id: tripRequest.trip.id})}}"
        class="btn btn-link rounded-pill">
            Retour aux demandes
        </a>
    </div>

{% else %}
    {# For User, show my tripRequest request status #}
    <h3 class="">Ma demande</h3>
    <div class="d-flex justify-content-around">
        <button class="btn btn-{{ tripRequest.color }}" disabled>
            {{ tripRequest.status|title|trans }}
        </button>
        {# {% include 'trip_request/_delete_form.html.twig' %} #}
    </div>

{% endif %}