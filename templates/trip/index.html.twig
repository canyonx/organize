{% extends 'base.html.twig' %}

{% block title %}Trip index{% endblock %}

{% block body %}
    <h1>Trip index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>DateAt</th>
                <th>Description</th>
                <th>Lat</th>
                <th>Lng</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trip in trips %}
            <tr>
                <td>{{ trip.id }}</td>
                <td>{{ trip.title }}</td>
                <td>{{ trip.dateAt ? trip.dateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ trip.description }}</td>
                <td>{{ trip.lat }}</td>
                <td>{{ trip.lng }}</td>
                <td>
                    <a href="{{ path('app_trip_show', {'id': trip.id}) }}">show</a>
                    <a href="{{ path('app_trip_edit', {'id': trip.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_trip_new') }}">Create new</a>
{% endblock %}
