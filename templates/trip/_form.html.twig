{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.activity) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.dateAt) }}
                </div>
            </div>
            {{ form_row(form.title) }}
            {{ form_row(form.description) }}
            <div class="mb-3">
                <label for="city_trip" class="form-label">Ville</label>
                <div id="city_trip" data-controller="city-trip"></div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.location, {value: trip.location ?: app.user.city}) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.lat, {value: trip.lat ?: app.user.lat}) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.lng, {value: trip.lng ?: app.user.lng}) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <div id="map_form" class="rounded my-2" style="height:360px"></div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <button class="btn btn-primary rounded-pill">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}
