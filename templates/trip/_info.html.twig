    <div class="row justify-content-end">
        <div class="col-auto">
            {% if trip.member ==  app.user %}
                <a href="{{ path('app_trip_edit', {'id': trip.id}) }}" class="btn btn-secondary rounded-pill">Modifier</a>
            {% endif %}
        </div>
    </div>

</section>

