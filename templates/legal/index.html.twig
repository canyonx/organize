{% extends 'base.html.twig' %}

{% block title %}Mentions légales
{% endblock %}

{% block body %}
	<section class="card">
		<div class="card-header">
			<h1 class="card-title">Mentions légales</h1>
		</div>
		<div class="card-body">
			{% for legal in legals %}
				<div class="p-3">
					<h2 class="text-primary">{{ legal.title|capitalize }}</h2>
					<p>{{ legal.content|raw }}</p>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
