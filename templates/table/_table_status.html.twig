{% if app.user == trip.user %}

    {% if trip.isAvailable == false %}
        <button class="btn btn-warning" disabled>Closed</button>
    {% endif %}

    {# Trip join requests status #}
    {% for status, data in status[trip.id] %}
        {% if data.qty > 0 %}
            <button class="btn btn-{{ data.color }}" disabled> 
               {{ data.qty }} 
               {# {{ status|title }} #}
            </button>
        {% endif %}
    {% endfor %}
    
{% else %}

    {# User join request status #}
    {% for join in trip.joins %}
        {% if join.user == app.user %}
            <div class="d-grid gap-2 d-md-block">
                <button class="btn btn-outline-{{ join.color }}" disabled>
                    {{ join.status|title }}
                </button>
            </div>
        {% endif %}
    {% endfor %}

{% endif %}

