{% if app.user == trip.member %}

    {% if trip.isAvailable == false %}
        <button class="btn btn-warning" disabled>Closed</button>
    {% endif %}

    {# Trip join requests status #}
    {% for status, data in status[trip.id] %}
        {% if data.qty > 0 %}
            <button class="btn btn-secondary" disabled> 
               {{ data.qty }} 
               {{ status|title }}
            </button>
        {% endif %}
    {% endfor %}
    
{% else %}

    {# User trip request status #}
    {% for tr in trip.tripRequests %}
        {% if tr.member == app.user %}
            <div class="d-grid gap-2 d-md-block">
                <button class="btn btn-outline-secondary" disabled>
                    {{ tr.status|title }}
                </button>
            </div>
        {% endif %}
    {% endfor %}

{% endif %}

