<div class="bg-success rounded-5 m-2 p-2 row align-items-center">
	<div class="col-md-6 text-center">
		<a href="{{ path('app_trip_show', {'id': trip.id}) }}" data-turbo-frame="_top" class="w-100 btn btn-warning rounded-pill position-relative text-decoration-none">
			{{ trip.title|capitalize }}
			{% include "table/_notif.html.twig" %}
			{% if trip.isAvailable == false %}
				&ensp;
				<b class="text-danger" disabled>
					Ferm√©e
				</b>
			{% endif %}
		</a>
	</div>
	<div class="col-md-6 px-4">
		<div class="row align-items-center">
			<div class="col-md-6 title text-center my-1">
				{{ trip.location|capitalize }}
				&ensp;
				<i>{{ trip.activity|capitalize }}</i>
			</div>
			{% if status is defined %}
				<div class="col-md-6 text-center my-1">
					{% include "table/_table_status.html.twig" %}
				</div>
			{% else %}
				<div class="col-md-6 text-center">
					{% if trip.createdBy != app.user %}
						<a href="{{ path('app_profile_show', {'slug': trip.createdBy.slug}) }}" class="w-100 btn btn-light rounded-pill text-primary" data-turbo-frame="_top">
							{{ trip.createdBy|length > 20 ? trip.createdBy|slice(0, 20) ~ '...' : trip.createdBy }}
						</a>
					{% endif %}
				</div>
			{% endif %}
		</div>
	</div>
</div>
