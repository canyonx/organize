{{ form_start(form) }}
    <div class="text-danger">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">
            <div class="mb-3">
                <label for="city_search" class="form-label">Ville</label>
                <div id="city_search" data-controller="city-search"></div>
            </div>
        </div>
        <div class="col">
            {{ form_row(form.distance, {value: distance, attr: {'data-controller': 'search-distance'}}) }}
        </div>
        <div class="col">
            {{ form_row(form.activity) }}
        </div>
        {# <div class="col">
            {{ form_row(form.dateAt, {value: search.dateAt|date('Y-m-d')}) }}
        </div> #}
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.location, {value: search.location ?: app.user.city}) }}
        </div>
        <div class="col">
            {{ form_row(form.lat, {value: search.lat ?: app.user.lat}) }}
        </div>
        <div class="col">
            {{ form_row(form.lng, {value: search.lng ?: app.user.lng}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-3 d-flex justify-content-center align-items-baseline">
            <div class="form-check form-switch">
                {{ form_widget(form.isFriend, {attr: {'class': 'form-check-input'}}) }}
            </div>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-primary w-100">Search in {{ totalTrips }} trips</button>
        </div>
    </div>
{{ form_end(form) }}