<a href="{{ path('app_profile_show', {slug: user.slug}) }}" class="btn btn-outline-primary rounded-pill">
	<div class="d-flex align-items-center">
		<div class="">
			{% if user.avatar %}
				<img src="{{ asset(images_dir ~ user.avatar)|imagine_filter('user_card') }}" alt="Photo de {{ user }}" class="img-fluid rounded-circle me-2" width="50" height="50">
			{% else %}
				<div class="rounded-circle bg-light border me-2" style="height: 50px; width: 50px"></div>
				{# <img src="https://placehold.co/50" alt="{{ user.pseudo|title }}" class="img-fluid rounded-circle me-2">  #}
			{% endif %}
		</div>
		<div class="">
			{{ user.pseudo|title }}
		</div>
	</div>
</a>
