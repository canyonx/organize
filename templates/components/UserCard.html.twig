<div class="card">
    <div class="card-body">
        {% if user.avatar %}
            <img src="{{ asset(images_dir ~ user.avatar)|imagine_filter('user_card') }}" 
            alt="Photo de {{ user }}" 
            class="rounded-circle me-2"
            with="50" height="50">
        {% else %}
            <img src="https://placehold.co/50" alt="{{ user.pseudo|title }}" class="rounded-circle me-2">
        {% endif %}
        <a href="{{ path('app_profile_show', {slug: user.slug}) }}">{{ user.pseudo|title }}</a>
    </div>
</div>