<a href="{{ path('app_profile_show', {slug: user.slug}) }}" class="btn btn-outline-primary rounded-pill">
	<div class="d-flex align-items-center">
		<div class="">
			{% if user.avatar %}
				<img src="{{ asset(images_dir ~ user.avatar)|imagine_filter('user_card') }}" alt="Photo de {{ user }}" class="img-fluid rounded-circle me-2" width="50" height="50">
			{% else %}
				<img src="{{ asset('images/icons/android-chrome-192x192.png')|imagine_filter('user_card') }}" alt="{{ user.pseudo|title }}" class="img-fluid rounded-circle me-2">
			{% endif %}
		</div>
		<div class="">
			{{ user.pseudo|title }}
		</div>
	</div>
</a>
